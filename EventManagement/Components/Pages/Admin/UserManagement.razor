@page "/admin/users"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Identity
@using Microsoft.EntityFrameworkCore
@using System.Security.Claims
@using EventManagement.Security
@using EventManagement.Data
@using EventManagement.Models

@attribute [Authorize(Policy = EventManagement.Security.Permissions.Names.ManageUsers)]

@inject UserManager<IdentityUser> UserMgr
@inject RoleManager<IdentityRole> RoleMgr
@inject AppDbContext Db
@inject AuthenticationStateProvider Auth
@inject IJSRuntime JS

<h3>User Management</h3>

@if (!string.IsNullOrEmpty(error))
{
    <div class="alert alert-danger">@error</div>
}

@if (users is null)
{
    <div class="alert alert-info">Loading...</div>
}
else if (users.Count == 0)
{
    <div class="alert alert-info">No users found.</div>
}
else
{
    <table class="table table-sm align-middle">
        <thead>
            <tr>
                <th>Email</th>
                <th>Confirmed</th>
                <th>Roles</th>
                <th style="width:340px">Add role</th>
                <th class="text-end" style="width:120px">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var u in users)
            {
                var canDelete = iAmSupervisor
                && !u.Roles.Contains("Supervisor", StringComparer.OrdinalIgnoreCase)
                && u.Id != myId
                && !string.Equals(u.Email, "admin@example.com", StringComparison.OrdinalIgnoreCase);

                <tr>
                    <td>@u.Email</td>
                    <td>@(u.EmailConfirmed ? "✓" : "✗")</td>
                    <td>
                        @foreach (var r in u.Roles)
                        {
                            <span class="badge bg-secondary text-white me-1 align-middle">
                                @r
                                <button type="button"
                                        class="btn btn-sm btn-link p-0 ms-1 text-light opacity-75 align-baseline"
                                        title="Remove @r"
                                        @onclick="() => RemoveRole(u, r)">
                                    &times;
                                </button>
                            </span>
                        }
                    </td>
                    <td>
                        <div class="d-flex gap-2">
                            <select class="form-select form-select-sm"
                                    style="max-width:220px"
                                    @onchange="e => _selected[u.Id] = e.Value?.ToString() ?? string.Empty">
                                <option value="">-- choose role --</option>
                                @foreach (var r in roles)
                                {
                                    <option value="@r">@r</option>
                                }
                            </select>
                            <button class="btn btn-sm btn-primary" disabled="@busy"
                                    @onclick="() => AddRole(u)">
                                Add
                            </button>
                        </div>
                    </td>
                    <td class="text-end">
                        @if (canDelete)
                        {
                            <button class="btn btn-sm btn-outline-danger"
                                    disabled="@busy"
                                    @onclick="() => ConfirmDelete(u)">
                                Delete
                            </button>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    // view model per la tabella
    record UserVm(string Id, string Email, bool EmailConfirmed, string[] Roles);

    List<UserVm>? users;
    List<string> roles = new();
    string? error;
    bool busy;
    readonly Dictionary<string, string> _selected = new(); // userId -> ruolo selezionato

    string? myId;
    bool iAmSupervisor;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var st = await Auth.GetAuthenticationStateAsync();
            var me = st.User;
            myId = me.FindFirstValue(ClaimTypes.NameIdentifier);
            iAmSupervisor = me.IsInRole("Supervisor");

            await LoadAll();
        }
        catch (Exception ex)
        {
            error = ex.Message;
        }
    }

    private async Task LoadAll()
    {
        var list = await UserMgr.Users.OrderBy(u => u.Email).ToListAsync();
        var acc = new List<UserVm>(list.Count);
        foreach (var u in list)
        {
            var rs = await UserMgr.GetRolesAsync(u);
            acc.Add(new UserVm(u.Id, u.Email ?? "", u.EmailConfirmed, rs.ToArray()));
        }
        users = acc;

        roles = await RoleMgr.Roles
            .Select(r => r.Name!)
            .OrderBy(n => n)
            .ToListAsync();
    }

    async Task AddRole(UserVm u)
    {
        error = null;
        if (!_selected.TryGetValue(u.Id, out var role) || string.IsNullOrWhiteSpace(role))
            return;

        busy = true; StateHasChanged();
        try
        {
            var user = await UserMgr.FindByIdAsync(u.Id);
            if (user is null) { error = "User not found"; return; }

            var res = await UserMgr.AddToRoleAsync(user, role);
            if (!res.Succeeded) error = string.Join("; ", res.Errors.Select(e => e.Description));

            await LoadAll();
        }
        finally { busy = false; StateHasChanged(); }
    }

    async Task RemoveRole(UserVm u, string role)
    {
        error = null;
        busy = true; StateHasChanged();
        try
        {
            var user = await UserMgr.FindByIdAsync(u.Id);
            if (user is null) { error = "User not found"; return; }

            var res = await UserMgr.RemoveFromRoleAsync(user, role);
            if (!res.Succeeded) error = string.Join("; ", res.Errors.Select(e => e.Description));

            await LoadAll();
        }
        finally { busy = false; StateHasChanged(); }
    }

    async Task ConfirmDelete(UserVm u)
    {
        var ok = await JS.InvokeAsync<bool>(
            "confirm",
            $"Delete user '{u.Email}'?\nThis will also remove their comments and subscriptions.");
        if (!ok) return;

        await DeleteUser(u);
    }

    async Task DeleteUser(UserVm u)
    {
        error = null;
        busy = true; StateHasChanged();

        try
        {
            var user = await UserMgr.FindByIdAsync(u.Id);
            if (user is null) return;

            // protezioni extra
            var targetRoles = await UserMgr.GetRolesAsync(user);
            if (targetRoles.Contains("Supervisor", StringComparer.OrdinalIgnoreCase) || user.Id == myId)
                return;

            // 1) Dati collegati (evita errori FK)
            Db.Subscriptions.RemoveRange(Db.Subscriptions.Where(s => s.UserId == u.Id));
            Db.Comments.RemoveRange(Db.Comments.Where(c => c.UserId == u.Id));
            await Db.SaveChangesAsync();

            // 2) Utente Identity
            var res = await UserMgr.DeleteAsync(user);
            if (!res.Succeeded) error = string.Join("; ", res.Errors.Select(e => e.Description));

            await LoadAll();
        }
        finally { busy = false; StateHasChanged(); }
    }
}
